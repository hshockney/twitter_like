<h2>Sign up</h2>

<section id="newsletter" class="bg-dark text-white py-5">
<div class="row">
<div class="col-md-4">

</div>

<div class="col-md-4">



    
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

 <div class="form-label-group">
    <%= f.text_field :name, autofocus: true, class: "form-control form-control-lg", placeholder: 'Name' %>
  </div>

  <br>
  <br>

  <div class="form-label-group">
    <%= f.text_field :username, class: "form-control form-control-lg", placeholder: 'Username' %>
  </div>
<br>
  <br>

  <div class="form-label-group">
    <%= f.email_field :email, class: "form-control form-control-lg", placeholder: 'Email' %>
       

  </div>

  <br>
  <br>

  <div class="form-label-group">
    <%= f.password_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), class: "form-control form-control-lg", placeholder: 'Password' %>
  </div>
  <br>
  <br>
  <div class="form-label-group">
    <%= f.password_field :password_confirmation, required: true, class: "form-control form-control-lg", placeholder: 'Password Confirmation' %>
  </div>
  <br>
  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: 'btn btn-lg btn-primary' %>
  </div>
   
<% end %>

<%= render "devise/shared/links" %>
</div>



<div class="col-md-4">

</div>
</div>


</section>

