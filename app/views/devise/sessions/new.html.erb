<h2>Sign In</h2>

<section id="newsletter" class="bg-dark text-white py-5">
<div class="row">
<div class="col-md-4">

</div>

<div class="col-md-4">

<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-label-group">
    <%= f.email_field :email, required: false, autofocus: true, class: "form-control form-control-lg", placeholder: 'Email' %>
    </div>
   <br>
    <div class="form-label-group">
    <%= f.password_field :password, required: false, class: "form-control form-control-lg", placeholder: 'Password' %>

    </div>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
 

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>

<div class="col-md-4">

</div>
</div>
</div>

</section>