            <div class="col-md-4">
             
              <div class="card mb-4 box-shadow">
         <% if user_signed_in? %>
               
                 <div class="col-md-12">
                 <%= render 'tweeets/form' %>
                </div>


            <% end %>
       
          

                
                <div class="card-body">
                

                  <% @tweeets.each do |tweeet| %> 
                <div class="card-body d-flex flex-column align-items-start border">
               
<div class="box">
<article class="media">
  <div class="media-left">
    <figure class="image is-64x64">
<%= gravatar_image_tag(tweeet.user.email, size: 64, alt: tweeet.user.name) %>

   </figure>
   </div>

  <div class="media-content">
     <div class="content">
     <strong><%= tweeet.user.name %></strong>
      <small><%= tweeet.user.username %></small><br/>
      <p><%= tweeet.tweeet %></p>
     </div>
  </div>

  <% if user_signed_in? && current_user.id == tweeet.user_id %>
  <div class="form-check form-check-inline">
     <%= link_to tweeet, class: "level-item" do %>
       <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
     <% end %>
     <%= link_to edit_tweeet_path(tweeet), class: "level-item" do %>
     <span><i class="fa fa-pencil-square" aria-hidden="true"></i></span>
     <% end %>

     <%= link_to tweeet, method: :delete, data: { confirm: "Are you sure you want to delete this tweeet?"} do %>
        <span class="icon"><i class="fa fa-trash" aria-hidden="true"></i></span>
     <% end %>
</div>
   <% end %>
   </article>


</div>

</div>
<% end %>
</div>

</div>
</div>